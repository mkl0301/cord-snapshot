Vagrant.configure("2") do |config|
  config.vm.define :testbox8 do |testbox|
    testbox.vm.box = "ubuntu/trusty64"
    testbox.vm.provider :libvirt do |v,override|
      v.memory = 1024
      v.cpus = 1
      v.machine_arch = "aarch64"
      v.machine_type = "virt,gic_version=3"
      v.kernel = "/root/vagrant/test/vmlinuz"
      v.initrd = "/root/vagrant/test/initrd.img"
      v.cmd_line = "root=/dev/vda1 console=ttyAMA0 earlyprintk"
      v.graphics_type = "none"
      v.video_type = "none"
    end
  end
end
